// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id      Int       @id @default(autoincrement())
  email   String    @unique
  name    String?
  Reviews Reviews[]
}

model Professional {
  id          Int        @id @default(autoincrement())
  email       String     @unique
  name        String
  job         String
  Location    String
  reviews     Reviews[]
  description String
  value       Int
  time        Int
  schedule    Schedule[]
}

model Reviews {
  id              Int          @id @default(autoincrement())
  rating          Int
  content         String?
  professional    Professional @relation(fields: [professional_id], references: [id])
  professional_id Int
  user            User         @relation(fields: [user_id], references: [id])
  user_id         Int
}

model Schedule {
  id              Int          @id @default(autoincrement())
  date_hour       DateTime
  day_week        String
  user_name      String
  professional_id Int
  professional    Professional @relation(fields: [professional_id], references: [id])
}

